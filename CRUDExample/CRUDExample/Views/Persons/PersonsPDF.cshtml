@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

@* The below href will render as  http://localhost:port/StyleSheet.css*@
<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet" />

<h1>Persons</h1>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Letter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonResponse person in Model)
        {
            <tr>
                <td style="width: 8%">@person.Name</td>
                <td style="width: 20%">@person.Email</td>
                <td style="width: 13%">@person.DateOfBirth?.ToString("dd MMMM yyyy")</td>
                <td style="width: 4%">@person.Age</td>
                <td style="width: 6%">@person.Gender</td>
                <td style="width: 15%">@person.Address</td>
                <td style="width: 10%">@person.CountryName</td>
                <td style="width: 10%">@person.ReceiveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>
